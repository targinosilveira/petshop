<html>
  <head>
    <title><%=h SITE_CONFIG[:app_name] %> | <%=h yield(:title) %></title>
    <%= use_theme('slicehost') %>
    <%= javascript_include_tag 'formatacoes.js' %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
  
    <div id='root'>
      <div id='header'>
        <div id="identificacao">
          <% if logged_in? %>
            <b>Usuário: </b><%= current_user.login %> - <%= current_user.email %>
          <% end %>
        </div>
        <div id='logo'>
<%= link_to image_tag('logo.png', :border => 0, :alt => SITE_CONFIG[:app_name]) %><sup><b>Beta.</b></sup> <br />
        </div>
        <div id='change_log'>
          <b>
            Versão 0.0.4  - 27/03/2010
            <%= link_to 'Veja nosso log de alterações.', :controller => 'geral', :action => 'change_log' %> <br />
          </b>
        </div>
        
        <ul id='navigation'>
          <li><%= link_to 'Home', :controller => 'Home' %></li>
          <% if logged_in?  %>
            <li><%= link_to "Clientes", :controller => 'clientes', :action => 'index' %></li>
            <li><%= link_to "Tipos de Animais", :controller => 'tipos', :action => 'index' %></li>
            <li><%= link_to "Raças", :controller => 'racas', :action => 'index' %></li>
            <li><%= link_to "Sair do Sistema", '/logout' %></li>
          <% end %>
        </ul>
        <div class='clear'></div>
      </div>

      <div id='contents'>
        
        
       <!-- <div id='page_title_container'>
          <h1 class='title'><%= yield(:title) || "Untitled" %></h1>
          <h3 class='subtitle'><%= yield(:subtitle) || "Description goes here" %></h3>
        </div>-->
       <!-- Codigo desativado por falta de necessariedade....-->

       <div id="publicidade">
          <script type="text/javascript"><!--
            google_ad_client = "pub-3712988137688335"; /* 120x240, criado 12/03/10 */
            google_ad_slot = "1742550471";
            google_ad_width = 120;
            google_ad_height = 240;
            //-->
          </script>
          <script type="text/javascript"
            src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
          </script>
        </div>

        <%= display_flash(flash) %>

        <%= yield %>

        <div id='root_footer'></div>

      </div>
      
      <div id='footer'>
        &copy <%= Time.now.year %> <%=h SITE_CONFIG[:copyright] %>. All Rights Reserved.
      </div>
      
    </div>
    <script type="text/javascript">
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
    </script>
    <script type="text/javascript">
      try {
        var pageTracker = _gat._getTracker("UA-4734230-3");
        pageTracker._trackPageview();
      } catch(err) {}
    </script>
  </body>
</html>