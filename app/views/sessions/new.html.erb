<p><%= submit_tag 'Entrar' %> &nbsp;&nbsp;&nbsp;&nbsp; <%= link_to 'Registre-se e use gratuitamente.', {:controller => 'users', :action => 'new'} , :id => "registrese" %></p>
<% end -%>
