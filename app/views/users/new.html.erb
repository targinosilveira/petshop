<h1>Registre-se como um novo usuário do sistema.</h1>
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<p><%= label_tag 'Nome de Usuário: ' %><br/>
<%= f.text_field :login %></p>

<p><%= label_tag 'e-mail:' %><br/>
<%= f.text_field :email %></p>

<p><%= label_tag 'Senha: ' %><br/>
<%= f.password_field :password %></p>

<p><%= label_tag 'password_confirmation', 'Confirmação da Senha: ' %><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag 'Registrar-se' %></p>
<% end -%>
