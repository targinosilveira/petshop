<h1>Cadastre-se como um novo usuário</h1>
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<p><%= label_tag 'login', "Login: " %><br/>
<%= f.text_field :login %></p>

<p><%= label_tag 'email', "E-mail: " %><br/>
<%= f.text_field :email %></p>

<p><%= label_tag 'password', "Password: " %><br/>
<%= f.password_field :password %></p>

<p><%= label_tag 'password_confirmation', 'Confirmação de Password: ' %><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag 'Cadastrar-se' %></p>
<% end -%>
